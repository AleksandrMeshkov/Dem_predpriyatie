<Page x:Class="Dem_predpriyatie.Pages_list.Material_pages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem_predpriyatie.Pages_list"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="850" MinWidth="1500" Title="Материалы" Background="white">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Click="Add_btn" Width="150" Height="30" Margin="0,0,10,0">Добавить</Button>
            <Button Click="Set_btn" Width="150" Height="30" Margin="10,0,10,0">Изменить</Button>
            <Button Click="Del_btn" Width="150" Height="30" Margin="10,0,0,0">Удалить</Button>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="Material_list" Margin="10" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical"> <!--для того чтоб расположить элементы вертикально-->
                            <TextBlock Grid.Column="1" Text="{Binding Name, StringFormat='Материал: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="2" Text="{Binding Measurement.Name, StringFormat='Ед. изм. : {0}'}" Margin="5"/> 
                            <TextBlock Grid.Column="3" Text="{Binding Quantity, StringFormat='Остаток: {0}'}" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

