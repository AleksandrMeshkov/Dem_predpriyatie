<Page x:Class="Dem_predpriyatie.Pages_list.Staff_pages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem_predpriyatie.Pages_list"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Staff_pages" Background="White">

    <Grid>
        <ListView x:Name="Staff_list" Margin="10" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical">
                            <TextBlock Grid.Column="1" Text="{Binding FullName, StringFormat='ФИО: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="2" Text="{Binding Position.Name, StringFormat='Должность: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="3" Text="{Binding Departments.Name, StringFormat='Отдел: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="3" Text="{Binding Position.Salary, StringFormat='Заработная плата: {0}'}" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
