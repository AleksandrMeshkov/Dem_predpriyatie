<Page x:Class="Dem_predpriyatie.Pages_list.Post_materials"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem_predpriyatie.Pages_list"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="850" MinWidth="1500" Title="Поставки" Background="white">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView Grid.Row="1" x:Name="Post_list" Margin="10" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <TextBlock Text="{Binding Date, StringFormat='Дата: {0}'}" Margin="5"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0}'}" Margin="5"/>
                            <TextBlock Text="{Binding Quantity, StringFormat='Количество: {0}'}" Margin="5"/>
                            <TextBlock Text="{Binding MaterialName, StringFormat='Материал: {0}'}" Margin="5"/>
                            <TextBlock Text="{Binding Remains, StringFormat='Остаток на складе: {0}'}" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
