<Page x:Class="Dem_predpriyatie.Pages_list.Orders_pages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem_predpriyatie.Pages_list"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders_pages" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Click="Add_btn" Width="150" Height="30" Margin="0,0,10,0">Создать</Button>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="Orders_list" Margin="10" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical">
                            <TextBlock Grid.Column="0" Text="{Binding Clients.FullName, StringFormat='ФИО: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="1" Text="{Binding Specification.Products.Name, StringFormat='Продукт: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="2" Text="{Binding Specification.Quantity, StringFormat='Количество: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="3" Text="{Binding Date_start, StringFormat='Дата начала: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="4" Text="{Binding Date_end, StringFormat='Дата окончания: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="5" Text="{Binding Status.Name, StringFormat='Статус заказа: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="6" Text="{Binding Specification.Recipe.Materials.Name, StringFormat='Материал: {0}'}" Margin="5"/>
                            <TextBlock Grid.Column="7" Text="{Binding Specification.Recipe.Quantity, StringFormat='Количество материала: {0}'}" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
