<Page x:Class="Dem_predpriyatie.Order_settings.Order_add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dem_predpriyatie.Order_settings"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="850" MinWidth="1500"
      Title="Order_add" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <TextBlock Text="Добавление заказов" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Клиент:" FontSize="20"/>
            <ComboBox x:Name="ClientsBox" Height="35">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FullName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Продукция:" FontSize="20"/>
            <ComboBox x:Name="ProductsBox" Height="35">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Количество:" FontSize="20"/>
            <TextBox x:Name="ProductsCount" FontSize="20" Height="35" Width="200" HorizontalAlignment="Left" Margin="0,5,0,20"/>

            <TextBlock Text="Дата начала" FontSize="20"/>
            <DatePicker x:Name="StartDateOrder" Width="150" Height="35" FontSize="20" HorizontalAlignment="Left"/>

            <TextBlock Text="Дата окончания" FontSize="20"/>
            <DatePicker x:Name="EndDateOrder" Width="150" Height="35" FontSize="20" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="AddOrderBtn" Content="Добавить" Width="120" Height="40" FontSize="18" Background="Aqua" Foreground="Black" Margin="5" Click="AddOrderBtn_Click"/>
                <Button x:Name="ClearOrderBtn" Content="Очистить" Width="120" Height="40" FontSize="18" Background="Aqua" Foreground="Black" Margin="5" Click="ClearOrderBtn_Click"/>
                <Button x:Name="CancelOrderBtn" Content="Отмена" Width="120" Height="40" FontSize="18" Background="Aqua" Foreground="Black" Margin="5" Click="CancelOrderBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
